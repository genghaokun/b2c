<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}B2C{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    	<a href="{{ path('homepage') }}">首页</a>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <a href="{{path('fos_user_security_logout')}}">退出帐号</a>
            <a href="{{path('user_home')}}">我的账户</a>
        {% else %}
            <a href="{{path('fos_user_security_login')}}">登录</a>
            <a href="{{path('fos_user_registration_register')}}">注册</a>
        {% endif %}
        <form action="{{ path('search') }}" method="get"  onsubmit="">
            <div class="search-cen">
                <input type="text" id="keys" name="keys" lang="zh-CN" autocomplete="off" value="">
                <input type="submit" class="scbut" value="搜索">
        </form>
        {% block body %}{% endblock %}
        
        <!-- 此处是FOSUser信息 -->
        {% block fos_user_content %} {% endblock fos_user_content %}
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
