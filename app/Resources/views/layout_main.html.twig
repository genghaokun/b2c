<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>彩购网---{% block title %}主页{% endblock %}</title>
        <!-- Bootstrap Core CSS -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}" type="text/css">
        <!-- Custom CSS -->

        <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css">
        {% block stylesheets %}{% endblock %}
        <!-- Custom icon -->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="header">
            <div class="navbar">
                <div class="container-non-responsive">
                    <div class="pull-left">
                        <a href="{{ path('homepage') }}"><h6>欢迎来到彩购!</h6></a>
                        <a href="{{ path('homepage') }}"><h6>收藏彩购网</h6></a>       
                    </div>
                    <div class="pull-right">                 
                            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <div id="after-login">
                                <a class="no-padding a-login" href="{{ path('user_profile') }}"><h6>{{ app.user.email }}&nbsp;|</h6></a>
                                <a class="no-padding a-login" href="{{path('fos_user_security_logout')}}"><h6>登出</h6></a>
                            </div>
                             <div id="user-home" class="history">
                                <a href="{{ path('user_profile') }}"><h6>我的彩购</h6></a> 
                                <div class="history-list">
                                    <div><a href="{{path('user_profile')}}"><h6>我的账户</h6></a></div>
                                    <div><a href="{{path('user_profile')}}"><h6>我的积分</h6></a></div>
                                    <div><a href="{{path('user_profile')}}"><h6>充值</h6></a></div>
                                </div>
                            </div>
                             {% else %}
                            <div id="before-login">
                                <a class="a-login" href="{{path('fos_user_security_login')}}"><h6>登录</h6></a>
                                <a class="a-login" href="{{path('fos_user_registration_register')}}"><h6>注册</h6></a>
                            </div>
                             {% endif %}            
                            <div id="history-view" class="history">
                                <h6>最近浏览</h6>
                                <div class="history-list">
                                <a href="{{ path('homepage') }}" >
                                    <div class="item"> 
                                        <div class="cart-image">
                                             <img src="{{ asset('img/aptami.jpg') }}" />
                                        </div>
                                        <div class="nav-cart-content">
                                             <div><h5>麦卢卡蜂蜜</h5></div>
                                             <span><strong>$2000.00</strong></span>
                                        </div>   
                                    </div>
                                </a>
                                <a href="{{ path('homepage') }}" >
                                    <div class="item"> 
                                        <div class="cart-image">
                                             <img src="{{ asset('img/aptami.jpg') }}" />
                                        </div>
                                        <div class="nav-cart-content">
                                             <div><h5>麦卢卡蜂蜜麦卢卡蜂蜜麦卢卡蜂蜜麦卢卡蜂蜜麦卢卡蜂蜜麦卢卡蜂蜜麦卢卡蜂蜜麦卢卡蜂蜜麦卢卡蜂蜜麦卢卡蜂蜜麦卢卡蜂蜜</h5></div>
                                             <span><strong>$2000.00</strong></span>
                                        </div>   
                                    </div>
                                </a>
                                    
                                    <div class="history-clear">
                                    <a href="{{ path('homepage') }}"><h6>删除浏览记录</h6></a>
                                    </div>
                                </div>
                            </div>
                            <div id="more" class="history">
                                <h6>更多</h6>
                                <div class="history-list">
                                    <div><a href="{{ path('contact') }}"><h6>联系我们</h6></a></div>
                                    <div><a href="{{ path('about') }}"><h6>关于我们</h6></a></div>    
                                </div>
                            </div>
                    </div>
                </div>
            </div>

             {% block header %}
            <!-- Lower Header Section -->
            <div id="mid-header">
                <div class="container-non-responsive">
                    <div class="col-xs-3">
                        <a class="logo" href="{{ path('homepage') }}">
                            <img src="{{ asset('img/logo.jpg') }}" alt="彩购网">
                        </a>
                    </div>
                    <div class="col-xs-7">
                        <div class="navbar-search pull-left">
                            <form action="{{ path('search') }}" method="get"  onsubmit="">
                                 <input type="text" id="keys" name="keys" lang="zh-CN" placeholder="搜索产品..." class="search-query" value="{{ app.request.get('keys') }}">
                                 <input type="submit" value="搜索">
                            </form>
                            <div class="search-keys pull-left">                           
                                <a href=""><h6>麦卢卡蜂蜜</h6></a>&nbsp;|
                                <a href=""><h6>好健康蜂胶</h6></a>&nbsp;|
                                <a href=""><h6>爱他美婴儿奶粉</h6></a>&nbsp;|
                                <a href=""><h6>蔓越莓</h6></a>&nbsp;|
                                <a href=""><h6>纽乐鱼油</h6></a>&nbsp;|
                                <a href=""><h6>护手霜</h6></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-2">
                    <div class="cart-wrapper">
                        <a class="cart" href="{{ path('cart') }}">
                            <img src="{{ asset('img/cart.gif') }}">
                            <span>&nbsp;购物车 &nbsp;</span>
                        </a>
                        <div class="clear"></div>
                        <div class="cart-list">
                            <i class="cart-block-row"></i>
                            <div class="item">
                                <div class="cart-image">
                                    <img src="{{ asset('img/aptami.jpg') }}" />
                                </div>
                                <div class="nav-cart-content">
                                    <h5>麦卢卡蜂蜜</h5>
                                    <span><strong>$2000.00</strong></span>
                                    <span>×20</span>
                                    <span class="remove"><a href="#">删除</a></span>
                                </div>
                            </div>
                            <div class="item">
                                <div class="cart-image">
                                    <img src="{{ asset('img/aptami.jpg') }}" />
                                </div>
                                <div class="nav-cart-content">
                                    <h5>麦卢卡蜂蜜</h5>
                                    <span><strong>$220.00</strong></span>
                                    <span>×5</span>
                                    <span class="remove"><a href="#">删除</a></span>
                                </div>
                            </div>
                            <div class="total">
                                <span>共<strong>25</strong>件商品</span>
                                <span>共计<strong>$411.00</strong></span>
                            </div>
                            <form action="{{path('cart')}}" method="get" onsubmit="">
                                <input type="submit"  value="结算">
                            </form>
                        </div>
                    </div>
                    </div>
                </div>
            </div>

            <nav id="sub-navbar" class="sub-nav">
                <div class="nav-all">
                    <a href="{{ path('category') }}">全部商品分类</a>
                    <i class="fa fa-chevron-down"></i>
                    <div id="siderbar">
                        {{ render(controller('AppBundle:Widget/Menu:index')) }}
                    </div>
                </div>
                <div class="nav-right">
                    <a href="{{path('homepage')}}" class="active">首页</a>
                    <a href="{{ path('about') }}">关于彩购</a>
                    <a href="#">物流中心</a>
                    <a href="{{ path('contact') }}">联系我们</a>
                </div>
            </nav>
            {% endblock %}
        </div>

        <!-- body -->
        {% block body %}{% endblock %}
        <div id="footer">
            <footer>
                <div class="container-non-responsive">  
                    <div class="col-xs-2">
                            <h5>公司简介</h5><br>
                             <a href="{{ path('about') }}">
                            <p> 采购网是一家专注纽澳特产品，护肤品，保健品为一体的大型连锁专营店。 </p>
                        </a>
                    </div>
                    <div class="col-xs-2">
                        <h5>新手指南</h5><br>
                        <a href="{{ path('contact') }}">账号注册</a><br>
                        <a href="#">充值积分</a><br>
                        <a href="#">产品退税</a><br>
                        <a href="#">购物流程</a><br>
                    </div>
                    <div class="col-xs-2">
                        <h5>发货说明</h5><br>
                        <a href="#">快递资费标准</a> <br>
                        <a href="#">收货时间</a><br>
                        <a href="#">订单拆分</a><br>    
                    </div>
                    <div class="col-xs-2">
                        <h5>支付方式</h5><br>
                        <a href="payment.html">在线支付</a> <br>
                        <a href="#">信用卡支付</a><br>
                        <a href="#">银行转账</a><br>
                        <a href="#"><img src="{{ asset('img/payment/paymentexpress.png') }}" alt="payment"></a>
                    </div>
                    <div class="col-xs-2">
                        <h5>售后服务</h5><br>
                        <a href="#">退换货政策</a> <br>
                        <a href="#">退换货流程</a><br>
                        <a href="#">退款说明</a><br>
                        <a href="#">我要退货/换货</a><br>
                    </div>
                    <div class="col-xs-2">
                        <h5>联系我们</h5><br>
                        <a href="joinUs.html">加入我们</a><br>
                        <a href="{{ path('contact') }}">联系我们</a><br>
                        <a href="#">友情链接</a><br>
                    </div>
                </div>

                <div class="copyright">
                    <div class="container-non-responsive">              
                        <span>Copyright &copy;2015 彩购网 Copyright</span>
                    </div>
                </div>
            </footer>


            <div id="gototop">
                <i class="fa fa-chevron-up"></i>
                <div>返回顶部</div>
            </div>

        <!-- No Javascript warnings -->
            <noscript>
            <div>You browser doesn't support JavaScript or has it turned off. This website requires JavaScript to working propertly.</div>
            </noscript>
        </div>

        <!-- jQuery -->
        <script src="{{ asset('js/jquery-1.11.3.min.js') }}"></script>
        <script src="{{ asset('js/jquery.easing-1.3.min.js') }}"></script>
        <script src="{{ asset('js/jquery.scrollTo-1.4.3.1-min.js') }}"></script>
        <script src="{{ asset('js/jquery.lazyload.min.js') }}"></script>


        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>

        <!-- Custom JavaScript -->
        <script src="{{ asset('js/shop.js') }}"></script>

        {% block javascripts %}
        {% endblock %}

    </body>
</html>
