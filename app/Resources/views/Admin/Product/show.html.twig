{% extends 'Admin/admin_layout.html.twig' %}

{% block body -%}
    <h1>Product</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Price_discounted</th>
                <td>{{ entity.pricediscounted }}</td>
            </tr>
            <tr>
                <th>Viewed_count</th>
                <td>{{ entity.viewedcount }}</td>
            </tr>
            <tr>
                <th>Soldno</th>
                <td>{{ entity.soldNo }}</td>
            </tr>
            <tr>
                <th>Inventory</th>
                <td>{{ entity.inventory }}</td>
            </tr>
            <tr>
                <th>Click</th>
                <td>{{ entity.click }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Updateat</th>
                <td>{{ entity.updateAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ entity.poster }}</td>
            </tr>

            <tr>
                <th>Brand</th>
                <td>{{ entity.brand }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ entity.weight }}</td>
            </tr>
            <tr>
                <th>Productkey</th>
                <td>{{ entity.productKey }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_product') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_product_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
