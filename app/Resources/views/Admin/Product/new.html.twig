{% extends 'Admin/admin_layout.html.twig' %}

{% block adminProduct %}
<li class="active">
  <a href="#" class="auto">
    <span class="pull-right text-muted">
      <i class="i i-circle-sm-o text"></i>
      <i class="i i-circle-sm text-active"></i>
    </span>
    <i class="i i-t-shirt icon">
    </i>
    <span class="font-bold">商品管理</span>
  </a>
  <ul class="nav dk">
   <li >
     <a href="{{ path('admin_product') }}" class="auto">  
       <i class="i i-dot"></i>
       <span>商品列表</span>
     </a>
   </li>
   <li  class="active">
    <a href="{{ path('admin_product_new') }}" class="auto">
      <span class="pull-right text-muted">
        <i class="i i-circle-sm-o text"></i>
        <i class="i i-circle-sm text-active"></i>
      </span>
      <i class="i i-dot"></i>
      <span>添加商品</span>
    </a>
  </li>
  </ul>
  </li>


  {% endblock %}

  {% block body -%}
  <section id="content">
    <section class="vbox">
      <header class="header bg-light b-b">
        <p>添加商品</p>
      </header>
     <section class="scrollable padder">
      
     <div class="form">
       <div> {{form_label(form.name)}} {{form_widget(form.name)}}</div>
       <div> {{form_label(form.price)}} {{form_widget(form.price)}}</div>
       <div> {{form_label(form.price_discounted)}} {{form_widget(form.price_discounted)}}</div>
       <div> {{form_label(form.viewed_count)}} {{form_widget(form.viewed_count)}}</div>
       <div> {{form_label(form.soldNo)}} {{form_widget(form.soldNo)}}</div>
       <div> {{form_label(form.inventory)}} {{form_widget(form.inventory)}}</div>
       <div> {{form_label(form.click)}} {{form_widget(form.click)}}</div>
       <div> {{form_label(form.description)}} {{form_widget(form.description)}}</div>
       <div> {{form_label(form.status)}} {{form_widget(form.status)}}</div>
       <div> {{form_label(form.updateAt)}} {{form_widget(form.updateAt)}}</div>
       <div> {{form_label(form.poster)}} {{form_widget(form.poster)}}</div>
       <div> <label>分类</label> {{form_widget(form.category)}}</div>
       <div> {{form_label(form.brand)}} {{form_widget(form.brand)}}</div>
       <div> {{form_label(form.weight)}} {{form_widget(form.weight)}}</div>
       <div> {{form_label(form.productKey)}} {{form_widget(form.productKey)}}</div>

       <div class="admin-buttons">
        <a href="{{ path('admin_product') }}">Back
        </a>
      </div>
    </div>

  </section>
</section>
</section>


{% endblock %}
