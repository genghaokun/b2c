{% extends 'layout_main.html.twig' %}

{% block body %}
    <div class="container-non-responsive">
        <div class="row no-border">
            <div class="col-xs-3 siderbar">
                <div id="siderbar-main">
                    {{ render(controller('AppBundle:Widget/Menu:index')) }}
                </div>
                {{ render(controller('AppBundle:Widget/Default:brandList')) }}
                {{ render(controller('AppBundle:Widget/Default:discountPro')) }}
                 {{ render(controller('AppBundle:Widget/Default:bestPro')) }}
                <div class="side post-fee">
                    <div class="side-content">
                        <img src="{{ asset('img/fee.jpg') }}" alt="">
                        
                    </div>
                </div>
            </div>
            <div class="col-xs-9 no-padding slider-part">
                <div id="myCarousel" class="carousel slide">
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item">
                            <img src="{{ asset('img/slider1.jpg') }}" alt="">

                        </div>
                        <div class="item">
                            <img src="{{ asset('img/slider2.jpg') }}" alt="">

                        </div>
                        <div class="item active">
                            <img src="{{ asset('img/slider3.jpg') }}" alt="">

                        </div>

                    </div>
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <i class="fa fa-chevron-left"></i>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </div>
                 {{ render(controller('AppBundle:Widget/Default:index')) }}
                  {{ render(controller('AppBundle:Widget/Default:brand')) }}
                </div>
            </div>
                
                 <div class="row no-border footer-desc">
                    <div class="col-xs-6 footer-about">
                        <h3>关于我们</h3>
                        <div>采购网是一家专注纽澳特产品，护肤品，保健品为一体的大型连锁专营店。<br>
                    我们代理的都是新西兰澳洲药房所认可的大品牌，绝对一手货源，百分百保真。产品种类繁多，有上千种网络热销产品，代购追捧单品，经济实惠，价格合理。</div>
                    </div>
                    <div class="col-xs-3 footer-feedback">
                        <h3>客户反馈</h3>
                        <div><img src="{{ asset('img/feedback.jpg') }}" alt=""></div>
                    </div>
                    <div class="col-xs-3 footer-guarantee">
                        <h3>Plenty Bay 承诺</h3>
                        <div><img src="{{ asset('img/guran.jpg') }}" alt=""></div>
                    </div>
                </div>
           
    </div><!-- /container-non-responsive -->
{% endblock %}
