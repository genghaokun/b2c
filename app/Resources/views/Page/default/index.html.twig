{% extends 'layout_main.html.twig' %}

{% block body %}
    <div class="container-non-responsive">
        <div class="row no-border">
            <!--loaded sider bar-->
            <div class="col-xs-3 siderbar">
                <div id="siderbar-main">
                    {{ render(controller('AppBundle:Widget/Menu:index')) }}
                </div>
            </div>
            <div class="col-xs-9 no-padding slider-part">
                <div id="myCarousel" class="carousel slide">
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item">
                            <img src="{{ asset('img/slider1.jpg') }}" alt="">

                        </div>
                        <div class="item">
                            <img src="{{ asset('img/slider2.jpg') }}" alt="">

                        </div>
                        <div class="item active">
                            <img src="{{ asset('img/slider3.jpg') }}" alt="">

                        </div>

                    </div>
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <i class="fa fa-chevron-left"></i>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </div>
                <div class="row showpics">
                    <div class="col-xs-4">
                        <a href="product.html">
                            <img class="lazy" src="{{ asset('img/default.png') }}" data-original="{{ asset('img/sub1.jpg') }}" src="{{ asset('img/default.png') }}">
                        </a>	
                    </div> 
                    <div class="col-xs-4">
                        <a href="product.html">
                            <img class="lazy" src="{{ asset('img/default.png') }}" data-original="{{ asset('img/sub2.jpg') }}" src="{{ asset('img/default.png') }}">
                        </a>	
                    </div>
                    <div class="col-xs-4">
                        <a href="product.html">
                            <img class="lazy" src="{{ asset('img/default.png') }}"data-original="{{ asset('img/sub3.jpg') }}" src="{{ asset('img/default.png') }}">
                        </a>	
                    </div>  
                </div>
            </div>
        </div>


        {{ render(controller('AppBundle:Widget/Default:index')) }}

    </div><!-- /container-non-responsive -->
{% endblock %}
