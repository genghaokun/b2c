
{% for address in addresses %}
    <div class="address-each"> 
        <a href="#" class="pull-right">设为默认地址</a>
        <h5>
            <label>{{ address.name }}
                 <span>&nbsp;&nbsp;({{ address.contactNo }})</span>
            </label>
                 <div class="address-detail">
                 {{ address.address }}, 
                 {{ address.region }},
                 {{ address.city }}, 
                 {{ address.postCode }}
                 </div>
            <div>{{ address.country }}</div>  
        </h5>
        <a href="{{ path('user_address_edit', { id: address.id }) }}">
        <strong>编辑</strong></a>
        <a href="{{ path('user_address_remove', { id: address.id }) }}">
        <strong>删除</strong></a>
    </div>
    {% endfor %}
    <div class="clear">
	<form action="{{path('user_address_create')}}" method="get" onsubmit="">
    <input type="submit" value="返回" onclick="window.history.back();">
    <input type="submit" value="添加" >
    </form>
</div>


