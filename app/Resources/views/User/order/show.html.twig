
<div class="pull-left order-search">
    <input type="text" placeholder="搜索单号..."/>
</div>
{% for order in data %}
    <div id="{{ order.orderId }}" class="order-detail">
            <div class="order-title">
                <div class="order-title-each pull-left">
                    <div class="order-title-item">
                        <label>提交时间：</label>
                        <h5>{{ order.createAt|date('Y-m-d') }}</h5>
                    </div>
                    <div class="order-title-item">
                        <label>收件人：</label>
                        <h5>万江<a href="{{ path('user_address')}}" class="fa fa-edit add-address"></a></h5>
                    </div>
                    <div class="order-title-item">
                        <label>总价：</label>
                        <h5>NZD:<span class="color">${{ order.totalPrice }}</span></h5>
                    </div>
                    <div class="order-title-item">
                        <label>订单状态：</label>
                        <h5>未付款<span><a class="color user-order-hover" id="{{ order.orderId }}">(订单详情)</a></i></h5>
                    </div>
                </div>
                    <div class="order-title-each pull-right">
                        <div class="order-title-item">
                         <label>订单号：{{ order.orderId }}</label>
                         <h5>
                            <input type="submit" value="付款"/>
                            <span><a href="#">取消订单</a></span>
                        </h5>
                    </div>
                </div>
        </div>


       <div id="order_content_{{ order.orderId }}" class="order-content hide">
         {% block fos_user_content %}
        {% include "views/User/order/detail.html.twig" %}
        {% endblock fos_user_content %}
        </div>
        
    </div>
{% endfor %}

       
